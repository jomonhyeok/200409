    src="https://code.jquery.com/jquery-2.2.4.js"
    integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI="
    crossorigin="anonymous"></script>
    <script>
        $(function(){
            $(":text").css("background-color","red", "height","50px");
            $("ul li:nth-of-type(3)").css("color","red","background-color","green");
            $("h1, h2").css("color","red");
            $("#asd").click(function(){
                $("h4").css("color","red");
            });
            $('.content').click(function(){
                $('.content').hide();
            });
            $("ul li:first-of-type").mouseover(function(){
                $("ul li:first-of-type").css("color","green");
            });
            $("ul li:first-of-type").mouseout(function(){
                $("ul li:first-of-type").css("color","red");
            });
            $("ul li:first-of-type").focus(function(){
                $("ul li:first-of-type").css("color","red");
            });
            $("ul:first-of-type").mouseenter(function(){
                $(this).css("background-color","pink");
            });
            $("ul:last-of-type").mouseleave(function(){
                $("ul:last-of-type").css("background-color","skyblue");
            });
            $(".mm").click(function(){
                $("h1").animate({width:"300px", height:"50px", left: "500px"},1000).animate({width:"200px",height:"500px",opacity:"0.8"},2000)
            });
            $(".ll").click(function(){
                $("h2").animate({margin,left : "+=100px"},1000)
            });
            
        });
    </script>
    <style>
        h1{width: 100px; height: 100px; background-color: #535353;}
        h2{width: 200px; height: 100px; margin-left: 50px; background-color: aqua;}
    </style>
